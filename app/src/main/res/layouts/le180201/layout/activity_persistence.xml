<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".le180201_Persistence.PersistenceActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/le180201_fullname_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:hint="@string/le180201_field_player_s_fullname"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">
        <EditText
            android:id="@+id/le180201_country_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_weight="3"
            android:hint="@string/le180201_field_country"/>
        <EditText
            android:id="@+id/le180201_age_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:hint="@string/le180201_field_age"/>

        <EditText
            android:id="@+id/le180201_skill_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:hint="@string/le180201_field_skill"/>
    </LinearLayout>
    <Button
        android:id="@+id/le180201_search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/le180201_button_search"/>

    <Button
        android:id="@+id/le180201_add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/le180201_button_add" />

    <LinearLayout
        android:id="@+id/le180201_players"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</LinearLayout>